---
import Modal from '../components/Modal.astro';
import dataPersonal from '../scripts/data-personal.js';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Jorge Reiki | Sobre Mí" titleSeo="Jorge Reiki | Sobre Mí" descriptionSeo="Jorge Fairchild - Reiki Lomas de Zamora - Un poco sobre mí.."
        urlSeo="https://reikijorge.netlify.app/sobre-mi"
        canonical="https://reikijorge.netlify.app/sobre-mi"
>
    <section>
        <article class="reiki">
            <h1>Sobre mí</h1>
            <p class="description">
                Soy <span>Jorge Guillermo Fairchild</span>, un apasionado <span>Maestro de Reiki</span> y <span>especialista
                en Ciencias Alternativas</span>, dedicado a facilitar el bienestar holístico. Con una
                profunda conexión con el mundo de las energías y la espiritualidad, he dedicado
                mi vida a guiar a otros hacia un equilibrio integral en cuerpo, mente y espíritu.
            </p>
            <button class="abrir-modal" aria-label="sobre-mi">Saber Más</button>

            <Modal id={dataPersonal.id} title={dataPersonal.title} paragraphs={dataPersonal.paragraphs} characteristics={dataPersonal.characteristics} certificates={dataPersonal.certificates}/>

        </article>

        <article class="galeria">
            <img src="../../jorge/jorge1.webp" alt="Foto de Jorge">
            <img src="../../jorge/jorge2.webp" alt="Foto de Jorge">
        </article>
    </section>
</Layout>

<style>
    section {
        padding: 4rem 0rem;
        text-align: left;
        color: var(--clr-black);
        display: flex;
        flex-direction: column;
        gap: 3rem;
        text-align: center;

        .reiki {
            padding: 0 1rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
                h1 {
                    font-size: 2.5rem;
                }
                p {
                    font-size: .9rem;
                    line-height: 1.3;
                    letter-spacing: .5px;
                    font-weight: 100;
                    overflow: hidden;
                    display: -webkit-box;
                    -webkit-line-clamp: 5;
                    -webkit-box-orient: vertical;
                    text-overflow: ellipsis;

                    span {
                        color: var(--clr-primary-200);
                    }
                }

                button {
                    width: max-content;
                    margin: 0 auto;
                    padding: .4rem 2rem;
                    background-color: var(--clr-primary-200);
                    border: none;
                    color: #fff;
                    font-size: 1.1rem;
                    border-radius: 4px;
                    cursor: pointer;
                    transition: .3s ease background-color;
                }
        }

        .galeria {
            width: 100%;
            scroll-snap-type: x mandatory;
            overflow-x: auto;
            overflow-y: hidden;
            scrollbar-width: none;
            display: flex;

            img {
                scroll-snap-align: center;
                width: 100%;
                min-width: 100vw;
                height: 300px;
                object-fit: cover; 
                border: 2px solid #fff;
                border-left: none;
                border-right: none;
            }   

        }

    }

    @media screen and (width > 620px) {
        section {
            padding: 4rem 1rem;
            .reiki {
                padding: 0;
                display: flex;
                flex-direction: column;
                gap: 1rem;

                h1 {
                    font-size: 3rem;
                }
                p {
                    line-height: 1.5;
                    font-size: 1.2rem;
                }
            }

            .galeria {
                padding: 2rem 0;
                overflow: hidden;
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
                gap: 1rem;

                img {
                    width: 100%;
                    min-width: auto;
                    width:  300px;
                    height: 300px;
                    object-fit: cover;  
                    scroll-snap-align: center;
                    transition: .2s ease transform;
                    border-radius: 6px;
                    border-left: 2px solid #fff;
                    border-right: 2px solid #fff;

                    &:hover {
                        transform: scale(1.05);
                    }
                    
                }
            }

        }
    }

    @media screen and (width > 920px) {
        section {
            .reiki {
                    .description {
                        width: 60%;
                    }
            }

            .galeria {
                img {
                    width: 390px;
                    height: 390px;
                }
            }

        }
    }
</style>

<script>
    import '../scripts/modal.js'
</script>



