---
import Modal from "./Modal.astro"

const { id ,title, miniDescription, description, characteristics, img } = Astro.props
---

<div class="card" >
    <img src={img || '../../img2.jpg'} alt={`Imagen del certificado de ${title}`} loading="lazy">

    <div class="texts">
        <h2>{title}</h2>
        <p>{miniDescription}</p>
        <button class=`abrir-modal` aria-label={id}>Saber m√°s</button>
    </div>
</div>

<Modal id={id} title={title} paragraphs={description} characteristics={characteristics} img={img}/>

<style>
    
    .card {
        border-radius: 4px;
        padding-bottom: 1rem;
        width: 300px;
        background-color: var(--clr-primary-txt);
        transition: .3s ease all;

        img {
            border-radius: 4px 4px 0 0;
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .texts {
            padding: 0 .5rem;
            margin-top: 2rem;
            display: flex;
            flex-direction: column;
            text-align: center;
            gap: 1rem;

            h5 {
                font-size: 1.5rem;
            }

            p {
                font-size: 0.9rem;
                overflow: hidden;
                display: -webkit-box;
                -webkit-line-clamp: 5; 
                -webkit-box-orient: vertical;
                text-overflow: ellipsis;
            }

            button {
                width: max-content;
                margin: 0 auto;
                padding: .4rem 2rem;
                background-color: var(--clr-primary-200);
                border: none;
                color: #fff;
                font-size: 1.1rem;
                border-radius: 4px;
                cursor: pointer;
                transition: .3s ease background-color;
            }
        }

    }

    @media screen and (width > 620px) {
        .card {

        .texts {

            button {
                
                &:hover {
                    background-color: var(--clr-primary-300);
                }
            }
        }

        &:hover {
            border-bottom-right-radius: 50px;
            transform: scale(1.01);
            box-shadow: 0 0 10px 0px rgba(0, 0, 0, 0.308);
        }
    }

    }

</style>

<script>
    import '../scripts/modal.js'
</script>