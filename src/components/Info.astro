---
import Layout from '../layouts/Layout.astro';
const { title, description, titleSeo } = Astro.props
---

<Layout title={`Jorge Reiki | ${titleSeo}`}>
    <section>
        <article class="reiki">
            <div>
                <h1>{title}</h1>
            </div>
            <p>
                {description}
            </p>
        </article>

        <article class="galeria">
            <picture>
                <img src="../../img2.jpg" alt="">
                <img src="../../img2.jpg" alt=""  class="blur">
            </picture>

            <picture>
                <img src="../../img3.webp" alt="">
                <img src="../../img3.webp" alt="" class="blur">
            </picture>

            <picture>
                <img src="../../img5.jpg" alt="Imagen acerca de Reiki">
                <img src="../../img5.jpg" alt="Imagen acerca de Reiki" class="blur">
            </picture>

            <picture>
                <img src="../../img8.jpg" alt="Imagen acerca de Reiki">
                <img src="../../img8.jpg" alt="Imagen acerca de Reiki" class="blur">
            </picture>

            <picture>
                <img src="../../img4.jpg" alt="Imagen acerca de Reiki">
                <img src="../../img4.jpg" alt="Imagen acerca de Reiki" class="blur">
            </picture>

            <picture>
                <img src="../../img6.jpg" alt="Imagen acerca de Reiki">
                <img src="../../img6.jpg" alt="Imagen acerca de Reiki" class="blur">
            </picture>
        </article>
    </section>
</Layout>

<style>
    section {
        padding: 4rem 0rem;
        text-align: left;
        color: var(--clr-black);
        display: flex;
        flex-direction: column;
        gap: 3rem;
        text-align: center;

        .reiki {
            padding: 0 1rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
                h1 {
                    font-size: 2.5rem;
                    text-decoration: underline var(--clr-primary-200);
                }
            div {
                display: flex;
                align-items: center;
                gap: 1rem;
            }
        }

        .galeria {
            width: 100%;
            scroll-snap-type: x mandatory;
            overflow-x: auto;
            overflow-y: hidden;
            scrollbar-width: none;
            display: flex;

            picture {
                position: relative;

                img {
                    scroll-snap-align: center;
                    width: 100%;
                    min-width: 100vw;
                    height: 300px;
                    object-fit: cover;  

                }

                .blur {
                    border-radius: 6px;
                    position: absolute;
                    inset: 0;
                    z-index: -10;
                    filter: blur(7px) contrast(4);

                }
    
            }

        }

    }

    @media screen and (width > 620px) {
        section {
            padding: 4rem 1rem;
            .reiki {
                padding: 0;
                display: flex;
                flex-direction: column;
                gap: 1rem;

                h1 {
                    font-size: 3rem;
                }
                p {
                    line-height: 1.5;
                    font-size: 1.2rem;
                    width: 90%;
                }
            }

            .galeria {
                padding: 2rem 0;
                overflow: hidden;
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
                gap: 1rem;
                picture {
                    img {
                        width: 100%;
                        min-width: auto;
                        width:  300px;
                        height: 300px;
                        object-fit: cover;  
                        scroll-snap-align: center;
                        transition: .2s ease transform;
                        border-radius: 6px;


                        &:hover {
                            transform: scale(1.05);
                        }
                    }
                }
            }

        }
    }

    @media screen and (width > 920px) {
        section {
            .reiki {
                    p {
                        width: 60%;
                    }
            }

        }
    }
</style>
