<footer id="contacto">
    <section class="contacto">
        <article class="flex">
            <h2 class="title">Contacto</h2>
            <i class="bi bi-person-fill"></i>
        </article>

        <article>
            <a href="#" aria-label="Click Aquí"><i class="bi bi-instagram"></i>www.facebook.com/reikijorge</a>
            <a href="#" aria-label="Click Aquí"><i class="bi bi-envelope"></i>@jorgereiki@gmail.com</a>
