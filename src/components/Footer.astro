            <a href="#" aria-label="Click Aquí"><i class="bi bi-whatsapp"></i>15-6507-5228</a>
        </article>
    </section>

    <section class="dir">
        <div class="direccion flex">
            <h2 class="title">Direccion</h2>
            <i class="bi bi-geo-fill"></i>
        </div>

        <p>Avenida colombre, Lomas de Zamora, Buenos Aires</p>

        <div id="map"></div>
    </section>


    </footer>

<style>

    footer {
        position: relative;
        background-image: linear-gradient(
        0deg,
        #4c2d85ca,
        rgba(0,0,0,.2)
        ), url('../../img12.jpg');
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;

        display: grid;
        gap: 3rem;
        padding-block: 2rem 2rem;
        padding-inline: 1rem;
        color: #fff;
        background-color: var(--clr-primary-200);
        position: relative;

        &::before {
            content: '';
            position: absolute;
            top: -20px;
            left: 0;
            right: 0;
            height: 20px;
            background-color: var(--clr-primary-txt);
        }

        &::after {
            content: '';
            position: absolute;
            top: -30px;
            left: 50%;
            transform: translateX(-50%);
            clip-path: polygon(50% 100%, 0 60%, 100% 60%);
            background-color: var(--clr-primary-txt);
            height: 50px;
            width: 50px;
        }

        .title {
            font-size: 2rem;
            
        }

        section {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: .5rem;

            .direccion {
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }
        }

        article {
            display: flex;
            flex-direction: column;
            align-items:center;
            gap: 1rem;

            a {
                cursor: pointer;
                display: flex;
                align-items: center;
                gap: 0.5rem;

                &:hover {
                    text-decoration: underline;
                }
            }
        }

        .flex {
            display: flex;
            flex-direction: row;
            gap: 1rem;
            align-items: center;

            i {
                font-size: 2rem;
            }
        }

        #map {
            height: 180px;
            width: 100%;
            max-width: 300px;
        }

        i {
            font-size: 1.2rem;

        }

    }

    @media screen and (width > 620px) {
        footer {
            padding: 2rem 1rem;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;

            section {
                align-items: flex-start;
                gap: 1.2rem;
                h4 {
                    font-size: 2.5rem;
                    line-height: 1;
                }
                h5 {
                    font-size: 2rem;
                }

                p {
                    font-size: 1.2rem;
                }

                .direccion {
                    display: flex;
                    gap: 0.5rem;
                }
            }

            article {
                font-size: 1.2rem;
                align-items:flex-start;
                i {
                    font-size: 1.5rem;
                }
            }

            #map {
                width: 220px;
            }

            .contacto {
                justify-self: center;
            }

            .dire {
                justify-self: flex-end;
            }
    }
    }

</style>


<script>
    import '../scripts/map.js'
</script>
